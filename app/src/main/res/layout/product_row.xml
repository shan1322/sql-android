<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp">
    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/regno"
        android:text="Regno"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/roomno"
        android:text="Roomno"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/regno"
        android:layout_toEndOf="@+id/regno"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp" />
    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/block"
        android:text="Blockno"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_alignBaseline="@+id/book"
        android:layout_alignBottom="@+id/book" />
    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/mobile"
        android:gravity="center"
        android:text="Mobile no"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/roomno"
        android:layout_toEndOf="@+id/roomno"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp" />
    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/book"
        android:text="Book"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:layout_alignBaseline="@+id/cost"
        android:layout_alignBottom="@+id/cost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/cost"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/mobile"
        android:layout_toEndOf="@+id/mobile" />
</RelativeLayout>